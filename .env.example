 # Retail Intelligence Platform Environment Variables

# Application Settings
APP_NAME="Retail Intelligence Platform"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY="your-secret-key-here"

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration
DATABASE_URL="sqlite:///./retail_intelligence.db"

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,xls
UPLOAD_DIR="data/uploads"
PROCESSED_DIR="data/processed"

# Model Configuration
MODEL_SAVE_DIR="backend/models/saved_models"
DEFAULT_FORECAST_DAYS=30
MODEL_RETRAIN_THRESHOLD=0.1

# Indian Localization
CURRENCY="INR"
CURRENCY_SYMBOL="â‚¹"
LOCALE="en_IN"
TIMEZONE="Asia/Kolkata"

# API Configuration
API_V1_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:8000"]

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# Performance Settings
CACHE_TTL=3600  # 1 hour
MAX_WORKERS=4
BATCH_SIZE=1000
